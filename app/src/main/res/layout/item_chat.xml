<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>



    </data>

    <FrameLayout
        android:id="@+id/itemChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layoutDirection="ltr">

        <RelativeLayout
            android:id="@+id/viewTextImageMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_message_back"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgMain_TextImageMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:background="@drawable/shape_rounded_back"
                android:maxWidth="320dp"
                android:src="@drawable/img_placeholder" />

            <TextView
                android:id="@+id/txtText_TextImageMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgMain_TextImageMode"
                android:layout_alignStart="@+id/imgMain_TextImageMode"
                android:layout_alignEnd="@+id/imgMain_TextImageMode"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text=" امیردوام حالتون خوب باشه همیشه جه هبر چیکار  میکنید شتس یبکم ک شبمش سلام به همه ی دوستان گل"
                android:textColor="@color/black"
                android:textColorLink="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTime_TextImageMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtText_TextImageMode"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="28مهر ساعت 8:30"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textDirection="rtl"
                android:textSize="12sp" />


        </RelativeLayout>

        <FrameLayout
            android:id="@+id/viewImageMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_message_back"
            android:visibility="gone">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgMain_imageMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/shape_rounded_back"
                android:maxWidth="320dp"
                android:src="@drawable/img_placeholder" />

            <TextView
                android:id="@+id/txtTime_imgMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_imageonly_time_background"
                android:padding="4dp"
                android:text="28مهر ساعت 12:30"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/viewTextMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_message_back"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtText_textMoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:maxWidth="320dp"
                android:text=" امیردوام حاله  ی دوستان گل"
                android:textColor="@color/black"
                android:textColorLink="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTime_textMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="28مهر ساعت 8:30"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textDirection="rtl"
                android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:background="@drawable/img_new_message"
            android:id="@+id/viewNewMessageMode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone">

            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:id="@+id/txtNewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 پیام جدید"
                android:textColor="@color/colorNewMessageText"
                android:textSize="18sp" />


        </RelativeLayout>

    </FrameLayout>

</layout>


