<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_profile_back"
    tools:context=".ui.activity.AboutAnjomanActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            app:title="انجمن مهندسی کامپیوتر"
            android:theme="@style/ToolbarTheme"
            app:layout_scrollFlags="scroll|enterAlways"
            android:id="@+id/toolbarAboutAnjoman"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layoutDirection="ltr"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_rounded_back"
                    android:id="@+id/imgAnjomanPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_margin="12dp"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:text="با دنبال کردن انجمن کامپیوتر توی فضای مجازی غیر از اینکه میتونی از برنامه ها و کلاس های آموزشی این انجمن آگاه بشی، همچنین به کلی فیلم آموزشی که براتون آماده کردیم هم دسترسی پیدا میکنی !  منتظرت هستیم !"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/relativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintEnd_toEndOf="@+id/btn_signUp"
                        app:layout_constraintStart_toStartOf="@+id/btn_signUp"
                        app:layout_constraintTop_toBottomOf="@+id/btn_signUp"
                        app:layout_constraintVertical_bias="1.0">


                        <ImageView
                            android:id="@+id/anjomanInstagram"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="1dp"
                            android:src="@drawable/img_instagram" />

                        <ImageView
                            android:id="@+id/anjomanSite"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="1dp"
                            android:src="@drawable/img_site" />


                        <ImageView
                            android:id="@+id/anjomanTelegram"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="1dp"
                            android:src="@drawable/img_telegram" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_margin="12dp"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:text="باید بدونی که انجمن علمی مهندسی کامپیوتر دانشگاه شهرکرد فقط یه تیم 7 نفره نیست! جالبه بدونین که همه ی افراد علاقه مند در حوزه آیتی و کامپیوتر از هر رشته ای میتونن وارد این انجمن بشن و خودشونو با بچه های کامپیوتر همراه کنن. حتی از ورودی های 99 هم اونهایی که علاقه دارند میتونند با ارسال پیام به پشتیبانی آمادگی خودشون رو جهت عضویت و فعالیت در انجمن اعلام کنن. ما یه خانواده بزرگ هستیم که قراره امسال بترکونیم! منتظرت هستیم !"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logo_anjoman"
                        android:layout_width="140dp"
                        android:layout_height="140dp"/>

                    <Button
                        android:id="@+id/btn_textInWatsApp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:elevation="0.5dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="به ما ملحق شو!"
                        android:textAlignment="center"
                        android:textDirection="rtl"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>